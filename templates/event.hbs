<div class="header-container ui-expand" data-target="#event-{{id}}">
  <h2>{{category}} - {{action}}</h2>
  <span class="event-timestamp">@ {{timestamp}}</span>
</div>

<div class="ui-expandable event-information" id="event-{{id}}">
  <p>{{#if label}}<strong>Label</strong>: {{label}} {{/if}}</p>
  <p>{{#if value}}<strong>Value</strong>: {{value}} {{/if}}</p>
  <div class="dimensions-container">
    {{#if dimensions}}
    <table class="dimensions">
      <tr>
        <th>Index</th>
        <th>Dimension Value</th>
      </tr>
      {{#each dimensions}}
      <tr>
        <td>{{index}}</td>
        <td>{{value}}</td>
      </tr>
      {{/each}}
    </table>
    {{/if}}
    {{#if metrics}}
    <table class="metrics">

      <tr>
        <th>Index</th>
        <th>Metric Value</th>
      </tr>
      {{#each metrics}}
      <tr>
        <td>{{index}}</td>
        <td>{{value}}</td>
      </tr>
      {{/each}}
    </table>
    {{/if}}
  </div>
</div>
